            <configuration>
              <systemPropertyVariables>
                <DB_CONTAINER_IP>${docker.container.mysql.ip}</DB_CONTAINER_IP>
              </systemPropertyVariables>
            </configuration>
          </plugin>
        </plugins>
      </build>
